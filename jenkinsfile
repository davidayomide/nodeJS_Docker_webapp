        //}

        stage('Build Docker File') {
            steps {
                sh ''
                sh 'docker build . -t ayomide_test'
            }
        }
        
        
        
        stage('Software Composition Analysis Test Installation & Scan') {
            steps {
                // Install Python 
                sh 'sudo apt update'
                sh 'sudo apt install python3'
                // Install and upgrade pip
                // sh 'yes | sudo apt install python3-pip'
                // Install Syft CLI
                sh 'sudo su'
                sh 'sudo curl -sSfL https://raw.githubusercontent.com/anchore/syft/main/install.sh | sh -s -- -b /usr/local/bin'
                sh 'exit'
                // sh 'yes | pip3 install syft'
                // Run Syft scan on codebase
                sh 'syft ayomide_test -o syft-json=syft-report.json'        
            }
        }
        
        
        stage('SBOM Report') {
            steps {
            
            // Check Syft report for any vulnerabilities or license issues
                script {
                    def report = readJSON file: 'syft-report.json'
                    def report_1 = readFile('syft-report.json')
                    def message
                    if (report.vulnerabilities > 0 || report.license_issues > 0) {
                    message = 'Syft scan identified vulnerabilities or license issues. Build terminated.'
                    error message
                    } else {
                    message = 'Syft scan completed successfully. No vulnerabilities or license issues detected.'
                    }
                    // Send message to Telegram bot
                    //sh "curl -X POST -H 'Content-Type: application/json' -d '{\"chat_id\": \"-688306623\", \"text\": \"${message}\"}' https://api.telegram.org/bot5451305173:AAGSmRL_518hBsPx3N_Zih_cy0oeMbZhpyI/sendMessage"
                    // Send report notification to Telegram bot
                    sh 'pwd'
                    sh '| sudo curl -F chat_id=-688306623 -F document=@${report} https://api.telegram.org/bot5451305173:AAGSmRL_518hBsPx3N_Zih_cy0oeMbZhpyI/sendDocument'
                    // works if there is telegram plugin installed
                    //telegramSend(
                    //    token: '5451305173:AAGSmRL_518hBsPx3N_Zih_cy0oeMbZhpyI',
                    //    chatId: '-688306623',
                    //    message: "Docker image scan complete. Here is the report:\n\n${report_1}"
                    //)
                }    
            }

        }        
        
        
          stage('Start Docker Container') {
            steps {
                sh 'docker run -d -p 81:7000 ayomide_test'
            }
        }      
        
    }
